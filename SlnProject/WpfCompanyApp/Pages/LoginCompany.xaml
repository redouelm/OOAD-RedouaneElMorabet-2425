<Page x:Class="WpfCompanyApp.Pages.LoginCompany"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCompanyApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginCompany" Background="#2A2F4A">

    <Grid>
        <!-- Logo linksboven -->
        <Image Source="pack://application:,,,/Images/logoOdisee.png" Width="250" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"/>

        <!-- Inlogformulier gecentreerd -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="BenchmarkTool" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="gemaakt door: Redouane El Morabet" FontSize="12" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Gebruikersnaam" FontSize="14" Foreground="White"/>
            <TextBox x:Name="txtEmail" Width="200" BorderThickness="0" FontSize="14" Margin="0,5"/>

            <TextBlock Text="Wachtwoord"  Foreground="White" FontSize="14" Margin="0,10,0,0"/>
            <PasswordBox x:Name="pwdPassword" BorderThickness="0"  FontSize="14" Width="200" Margin="0,5"/>

            <Button Content="Login" Background="White" FontSize="18" BorderThickness="0" Padding="5" Width="200" Margin="0,20,0,0" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Page>
